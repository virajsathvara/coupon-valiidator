extends layout

block content
  .container
    h1 PRODUCTS

  .container  
    .row
      each val in products
        .col-md-4
            .card
              .card-body
                h5.card-title #{val.name}
                p.card-text
                  | INR #{val.price}
                a.btn.btn-primary(href=`/cart/${val._id}`) Add to Cart
